<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>INSPINIA | Main view</title>

  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <link href="/css/animate.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />

  <!--추가 스타일-->
</head>

<!--우측 상단 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>메세지 목록 조회</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home -></a>
      </li>
      <li>
        <a>메세지 목록 -></a>
      </li>
      <li class="active">
        <strong>조회</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
  <form action="/message/list" method="post" id="searchForm">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">닉네임</label>
            <input
              type="text"
              name="nick_name"
              value="<%=searchOption.nick_name%>"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">이메일</label>
            <input
              type="email"
              name="email"
              value="<%=searchOption.email%>"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">채널id</label>
            <input
              type="text"
              name="channel_id"
              value="<%=searchOption.channel_id%>"
              class="form-control"
            />
          </div>
        </div>
      </div>
      <div class="text-center">
        <input type="submit" class="btn btn-primary" value="조회" />
        <a href="/message/create" class="btn btn-info">신규</a>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th width="10%">채널ID</th>
                  <th width="10%">닉네임</th>
                  <th width="20%">접속id</th>
                  <th width="20%">메세지</th>
                  <th width="10%">접속ip</th>
                  <th width="10%">메세지상태</th>
                  <th width="20%">등록날짜</th>
                </tr>
              </thead>
              <tbody class="hoverTblBody">
                <% for (var i=0; i < messages.length; i++) { %>

                <tr>
                  <% Object.keys(messages[i]).forEach(function(key) { %> <% if
                  (key === 'msg_date' || key === 'del_date' || key ===
                  'member_id' || key === 'msg_type_code' || key ===
                  'top_channel_msg_id') { %> <% return; %> <% } %>
                  <td>
                    <% if (key === 'title') { %>
                    <a href="/message/update?idx=<%=messages[i][key]%>">
                      <%= messages[i][key] %>
                    </a>
                    <% } else if (key === 'message') { %>

                    <a
                      href="/message/modify/<%=messages[i]['top_channel_msg_id']%>"
                    >
                      <%= messages[i][key] %>
                    </a>

                    <% } else if (key === 'isDisplayCode') { %> <% if
                    (messages[i][key] === 1) { %>
                    <p>게시함</p>
                    <% } else { %>
                    <p>게시안함</p>
                    <% }%> <% } else { %>
                    <p><%= messages[i][key] %></p>
                    <% } %>
                  </td>
                  <% }); %>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
