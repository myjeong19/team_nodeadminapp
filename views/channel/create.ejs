<head>
  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <link href="/css/animate.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />

  <!--추가 스타일-->
</head>

<!--우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>채팅방 생성</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/main">홈</a>
      </li>
      >
      <li>
        <a>채팅방 생성</a>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<form class="wrapper wrapper-content" action="/channel/create" method="post">
  <div class="ibox-content m-b-sm border-bottom">
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group d-flex flex-column">
          <label class="control-label">대표 이미지 URL</label>
          <input type="text" class="form-control" name="channel_img_path" />
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label">커뮤니티 고유번호</label>
          <input type="text" class="form-control" name="comunity_id" />
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label">카테고리 코드</label>
          <input type="text" class="form-control" name="category_code" />
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label">동시 채널 접속자 수</label>
          <input type="number" class="form-control" name="user_limit" />
        </div>
      </div>

      <div class="col-sm-8">
        <div class="form-group">
          <label class="control-label">채널명</label>
          <input type="text" class="form-control" name="channel_name" />
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <label class="control-label">채널 간략 소개</label>
          <textarea
            class="form-control"
            rows="10"
            cols="5"
            name="channel_desc"
          ></textarea>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label">채널 오픈 상태 코드</label>
          <input type="number" class="form-control" name="channel_state_code" />
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label">등록일시</label>
          <input
            type="date"
            class="form-control"
            name="reg_date"
            value="<%=today%>"
          />
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label">등록자 고유 번호</label>
          <input type="text" class="form-control" name="reg_member_id" />
        </div>
      </div>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">저장</button>
      <a href="/channel/list" class="btn btn-info">목록</a>
    </div>
  </div>

  <script></script>
</form>
