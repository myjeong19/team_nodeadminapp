<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
  <form action="/admin/list" id="adminForm" method="post">
      <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
          <div class="col-sm-4">
            <div class="form-group d-flex flex-column">
              <label class="control-label">프로필 사진</label>
              <img class="w-75" src="" alt="" />
              <button class="w-75" submit="/">변경</button>
            </div>
          </div>

          <div class="col-sm-6">
            <div class="form-group">
              <div>
                <label class="control-label">소속회사코드</label>
                <input type="text" name="company_code" id="company_code" class="form-control mb-3" />
              </div>
              <div class="form-group">
                <label class="control-label col-6">ID</label>
                <input type="text" name="admin_id" id="admin_id" class="form-control mb-3" />
              </div>
              <div class="form-group">
                <label class="control-label">이름</label>
                <input type="text" name="admin_name" id="admin_name" class="form-control" />
              </div>
              <div class="form-group">
                <label class="control-label">비밀번호</label>
                <input type="password" name="admin_password" id="admin_password" class="form-control" />
              </div>
              <div class="form-group">
                <label class="control-label">email</label>
                <input type="text" name="email" id="email" class="form-control" />
              </div>
              <div class="form-group">
                <label class="control-label">전화번호</label>
                <input type="text" name="telephone" id="telephone" class="form-control" />
              </div>
              <div class="form-group">
                <label class="control-label">소속부서</label>
                <input type="text" name="dept_name" id="dept_name" class="form-control" />
              </div>
              <!-- <div class="form-group">
              <label class="control-label">생성일시</label>
              <input type="text" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label">수정일시</label>
              <input type="text" class="form-control" />
            </div> -->
            </div>
          </div>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary">저장</button>
          <a href="/admin/delete" class="btn btn-info">삭제</a>
          <a href="/admin/list" class="btn btn-info">목록</a>
        </div>
      </div>
  </form>
</div>