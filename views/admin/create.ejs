<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>INSPINIA | Main view</title>

  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <link href="/css/animate.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />

  <!--추가 스타일-->
</head>

<!--우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>관리자 정보 관리</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/main">Home</a>
      </li> > 
      <li>
        <a>관리자 정보 관리</a>
      </li> > 
      <li class="active">
        <strong>신규</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<form action="/admin/create" method="post">
  <div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-2">
          <div class="form-group">
            <label class="control-label">소속 회사 코드</label>
            <input
              type="text"
              class="form-control"
              name="company_code"
              id="company_code"
            />
          </div>
        </div>
        <div class="col-sm-5">
          <div class="form-group">
            <label class="control-label">관리자 계정 아이디</label>
            <input
              type="text"
              class="form-control"
              name="admin_id"
              id="admin_id"
            />
          </div>
        </div>
        <div class="col-sm-5">
          <div class="form-group">
            <label class="control-label">관리자 계정 비밀번호</label>
            <input
              type="password"
              class="form-control"
              name="admin_password"
              id="admin_password"
            />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자 이름</label>
            <input
              type="text"
              class="form-control"
              name="admin_name"
              id="admin_name"
            />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자 이메일</label>
            <input type="text" class="form-control" name="email" id="email" />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자 전화번호</label>
            <input
              type="text"
              class="form-control"
              name="telephone"
              id="telephone"
            />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">사용여부</label>
            <input
              type="text"
              class="form-control"
              name="used_yn_code"
              id="used_yn_code"
            />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">등록자 아이디</label>
            <input
              type="text"
              class="form-control"
              name="reg_user_id"
              id="reg_user_id"
            />
          </div>
        </div>

        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">등록일시</label>
            <input
              type="date"
              class="form-control"
              name="reg_date"
              id="reg_date"
            />
          </div>
        </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary" id="button-save">
          저장
        </button>
        <a href="/admin/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </div>
</form>

<script>
  const buttonSave = document.getElementById('button-save');

  const validationCheck = e => {
    const infoMessage = message => alert(`${message} 입력해주세요.`);

    const companyCode = document.getElementById('company_code');
    const adminId = document.getElementById('admin_id');
    const adminPassword = document.getElementById('admin_password');
    const adminName = document.getElementById('admin_name');
    const email = document.getElementById('email');
    const telephone = document.getElementById('telephone');
    const usedYnCode = document.getElementById('used_yn_code');
    const regUserId = document.getElementById('reg_user_id');
    const regDate = document.getElementById('reg_date');

    if (companyCode.value === '') {
      companyCode.focus();
      e.preventDefault();
      infoMessage('소속 회사 코드를');
      return false;
    }
    if (adminId.value === '') {
      adminId.focus();
      e.preventDefault();
      infoMessage('관리자 계정 아이디를');
      return false;
    }
    if (adminPassword.value === '') {
      adminPassword.focus();
      e.preventDefault();
      infoMessage('비밀번호를');
      return false;
    }
    if (adminName.value === '') {
      adminName.focus();
      e.preventDefault();
      infoMessage('관라자 이름을');
      return false;
    }
    if (email.value === '') {
      email.focus();
      e.preventDefault();
      infoMessage('이메일을');
      return false;
    }
    if (telephone.value === '') {
      telephone.focus();
      e.preventDefault();
      infoMessage('전화번호를');
      return false;
    }
    if (usedYnCode.value === '') {
      usedYnCode.focus();
      e.preventDefault();
      infoMessage('사용 여부를');
      return false;
    }

    if (regUserId.value === '') {
      regUserId.focus();
      e.preventDefault();
      infoMessage('등록자 아이디를');
      return false;
    }
    if (regDate.value === '') {
      regDate.focus();
      e.preventDefault();
      infoMessage('등록 일시를');
      return false;
    }
  };

  buttonSave.addEventListener('click', validationCheck);
</script>
