<head>
  <title>INSPINIA | Main view</title>

  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <link href="/css/animate.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />

  <!--추가 스타일-->
</head>

<!--우측 상단 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>사용자 정보 관리</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/Home/Index">Home</a>
      </li>
      <li>
        <a>사용자 정보 관리</a>
      </li>
      <li class="active">
        <strong>조회</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
  <form action="/admin/list" method="post">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="OrderNo">사용자 이름</label>
            <input type="text" class="form-control" name="admin_name" />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">아이디</label>
            <input type="text" class="form-control" name="admin_id" />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="MobileNo">사용여부</label>
            <input type="text" class="form-control" name="used_yn_code" />
          </div>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">조회</button>
        <a href="/admin/create" class="btn btn-info">신규</a>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th width="10%">관리자 고유번호</th>
                  <th width="5%">소속회사 코드</th>
                  <th width="10%">관리자 이름</th>
                  <th width="10%">관리자 계정 아이디</th>
                  <th width="10%">관리자 메일 주소</th>
                  <th width="10%">관리자 전화번호</th>
                  <th width="5%">사용여부</th>
                  <th width="10%">등록자 아이디</th>
                  <th width="10%">등록일시</th>
                  <th width="10%">수정자 아이디</th>
                  <th width="10%">수정일시</th>
                </tr>
              </thead>
              <tbody class="hoverTblBody">
                <% for (let i = 0; i < admins.length; i ++) {%>
                <tr>
                  <td>
                    <a href="/admin/modify/<%= admins[i].admin_member_id %>"
                      ><%= admins[i].admin_member_id %></a
                    >
                  </td>
                  <td><%= admins[i].company_code %></td>
                  <td><%= admins[i].admin_name %></td>
                  <td><%= admins[i].admin_id %></td>
                  <td><%= admins[i].email %></td>
                  <td><%= admins[i].telephone %></td>
                  <% if(admins[i].used_yn_code == "1"){%>
                  <td>가입</td>
                  <% } else{ %>
                  <td>탈퇴</td>
                  <% }%>
                  <td><%= admins[i].reg_user_id %></td>
                  <td><%= admins[i].reg_date %></td>
                  <td><%= admins[i].edit_user %></td>
                  <td><%= admins[i].edit_date %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
