<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>INSPINIA | Main view</title>

  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <link href="/css/animate.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />

  <!--추가 스타일-->
</head>


        <!--우측 상단 헤더 영역 -->
        <div class="row wrapper border-bottom white-bg page-heading">
          <div class="col-lg-10">
            <h2>게시글 목록 조회</h2>
            <ol class="breadcrumb">
              <li>
                <a href="/">Home -></a>
              </li>
              <li>
                <a>게시글 목록 -></a>
              </li>
              <li class="active">
                <strong>조회</strong>
              </li>
            </ol>
          </div>
          <div class="col-lg-2"></div>
        </div>

        <!--우측 콘텐츠 영역 -->
        <div class="wrapper wrapper-content">
          <form action="/article/list" method="post" id="searchForm">
            <div class="ibox-content m-b-sm border-bottom">
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label class="control-label" for="OrderNo">게시판</label>
                    <select
                      name="boardTypeCode"
                      id="boardTypeCode"
                      class="form-control"
                    >
                      <option value="0" <% if( searchOption.boardTypeCode === "0") { %> selected <%} %>>전체</option>
                      <option value="1" <% if( searchOption.boardTypeCode === "1") { %> selected <%} %>>공지게시판</option>
                      <option value="2" <% if( searchOption.boardTypeCode === "2") { %> selected <%} %>>기술블로깅</option>
                    </select>

                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label class="control-label" for="OrderName">제목</label>
                    <input
                      type="text"
                      name="title"
                      value="<%=searchOption.title%>"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label class="control-label" for="MobileNo">게시여부</label>
                    <select
                      name="isDisplayCode"
                      id="isDisplayCode"
                      class="form-control"
                    >
                      <option value="9" <% if( searchOption.isDisplayCode === "9") { %> selected <%} %>>전체</option>
                      <option value="1" <% if( searchOption.isDisplayCode === "1") { %> selected <%} %>>Y</option>
                      <option value="0" <% if( searchOption.isDisplayCode === "0") { %> selected <%} %>>N</option>
                    </select>

                  </div>
                </div>
              </div>
              <div class="text-center">
                <input type="submit" class="btn btn-primary" value="조회" />
                <a href="/article/create" class="btn btn-info">신규</a>
              </div>
            </div>
          </form>

          <div class="row">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <div class="ibox-content">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th width="10%">순번</th>
                          <th width="10%">게시판구분</th>
                          <th width="20%">제목</th>
                          <th width="20%">조회수</th>
                          <th width="10%">IP주소</th>
                          <th width="10%">게시상태</th>
                          <th width="20%">등록일자</th>
                        </tr>
                      </thead>
                      <tbody class="hoverTblBody">
                        <% for (var i=0; i < articles.length; i++) { %>

                        <tr>
                          <% Object.keys(articles[i]).forEach(function(key) { %>
                          <% if (key === 'contents' || key === 'regMemberId' || key === 'articleTypeCode') {
                          %> <% return; %> <% } %>
                          <td>
                            <% if (key === 'title') { %>
                            <a
                              href="/articles/update?idx=<%=articles[i][key]%>"
                            >
                              <%= articles[i][key] %>
                            </a>
                            <% } else if (key === 'articleId') { %>

                            <a
                              href="/article/modify/<%=articles[i]['articleId']%>"
                            >
                              <%= articles[i][key] %>
                            </a>

                            <% } else if (key === 'isDisplayCode') { %> <% if
                            (articles[i][key] === 1) { %>
                            <p>게시함</p>
                            <% } else { %>
                            <p>게시안함</p>
                            <% }%> <% } else { %>
                            <p><%= articles[i][key] %></p>
                            <% } %>
                          </td>
                          <% }); %>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
